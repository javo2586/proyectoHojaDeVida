.perfil
	text-align center
	margin-top 820px
.perfil-titulo
	margin 0

.perfil-parrafo
	width 80%
	display inline-block
.perfil-imageContenedor
	margin 0
	padding 1em 0

/*Habilidades*/
.habilidades
	text-align center
	
.habilidades-contenidoDiseno
	display inline-block
	text-align left
	padding 0
	margin-right 20em	
	
.habilidades-contenidoLista
	list-style none
	padding-bottom .3em
	color #808080
	
.habilidades-subtitulo
	font-size 2em
	color #A3BD3F

.habilidades-contenidoFrontend	
	display inline-block
	text-align right
	padding 0
	margin-left 20em
  		
/*Circulos Habilidades*/

.chart {
  position: relative;
  display: inline-block;
  width: 200px;
  height: 200px;
  text-align: center;
  font-size 4em
  vertical-align: bottom
  
}
.chart canvas {
  position: absolute;
  top: 0;
  left: 0;
}
.percent {
  display: inline-block;
  line-height: 200px;
  z-index: 2;
}
.percent:after {
  content: '%';
  margin-left: 0.1em;
  font-size: .8em;
}

		

	

	
	
	

