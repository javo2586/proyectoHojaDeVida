@import "normalize.styl"

/*Utilidades*/
.u-titulo
	color black
	font-size 2.5em
	text-align center
	padding .5em 0 .2em 0
	border-bottom 1px solid #DDDBDB
.u-mayusculas
	color #A3BD3F
	text-transform uppercase
.u-minusculas
	color #A3BD3F
	font-weight normal

/*Header*/	
.header
	text-align center	
	background-image url('../img/fondoHeader.jpg')
	background-repeat no-repeat 
	background-position center top 
	background-size cover
	position absolute
	top 0
	height 820px
.header-menu
	border 1px solid black
	height 4em
	position fixed
	left 0
	right 0
	top 0
.header-listaMenu
	margin 0
	padding 0
.header-itemMenu
	display inline-block
.header-linkMenu
	color black
	text-decoration none
	line-height 4em
	margin-right 1.5em
.header-imageContenedor
	margin-top 9em
.header-titulo
	font-size 3em
	font-weight 300	
	
